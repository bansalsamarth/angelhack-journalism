<!DOCTYPE html>
<html>
    <!--[if IE 9 ]><html class="ie9"><![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>journext | Profile</title>
    
        <!-- Vendor CSS -->
        <link href="/alpha/vendors/animate-css/animate.min.css" rel="stylesheet">
        <link href="/alpha/vendors/sweet-alert/sweet-alert.min.css" rel="stylesheet">
        <link href="/alpha/vendors/material-icons/material-design-iconic-font.min.css" rel="stylesheet">
        <link href="/alpha/vendors/socicon/socicon.min.css" rel="stylesheet">
            
        <!-- CSS -->
        <link href="/alpha/css/app.min.1.css" rel="stylesheet">
        <link href="/alpha/css/app.min.2.css" rel="stylesheet">
    </head>
    
    <body>
          <%- include ../partials/aheader.ejs %>
        
            <section id="content">
                <div class="container">
                    
                    <div class="block-header">
                        <h2><%=user.profile.name%> <small><%=user.email%></small></h2>
                    </div>
                    
                    <div class="card" id="profile-main">
                        <div class="pm-overview c-overflow">
                            <div class="pmo-pic">
                                <div class="p-relative">
                                    <% if(user.profile.picture) { %>
                                        <img class="img-responsive" src="<%=user.profile.picture%>" alt=""> 
                                    <% } %>
                                </div>
                                <div class="pmo-stat">
                                <% if(user.profile.name) { %>
                                    <h2 class="m-0 c-white"><%=user.profile.name%></h2>
                                <% }else{ %>
                                    <h2 class="m-0 c-white"><%=user.email%></h2>
                                <% } %>
                                <h6 class="c-white">journext ID:&nbsp<%=user._id%></h6>
                                </div>
                            </div>
                            
                            <div class="pmo-block pmo-contact hidden-xs">
                                <h2>Contact</h2>
                                
                                <ul>
                                    <li><i class="md md-phone"></i> <%=user.profile.phone%></li>
                                    <li><i class="md md-email"></i> <%=user.email%></li>
                                    <li><i class="md md-location-on"></i> <%=user.profile.location%></li>
                                </ul>
                            </div>
                            
                            
                        </div>
                        
                        <div class="pm-body clearfix">
                            <ul class="tab-nav tn-justified">
                                <li class="waves-effect"><a href="/account_">About</a></li>
                                <li class="waves-effect"><a href="/account_/update">Update Profile</a></li>
                                <li class="waves-effect"><a href="/account_/change_password">Change Password</a></li>
                            </ul>
                            
                           
                            
                            <div class="pmb-block">
                                <!-- <div class="pmbb-header">
                                    <h2><i class="md md-person m-r-5"></i> Basic Information</h2>
                                </div> -->
                                <p>You can delete your account, but keep in mind this action is irreversible.</p>
                                <form action="/account/delete" method="POST">
                                    <input type="hidden" name="_csrf" value="<%=_csrf%>">
                                    <div class="pmbb-body p-l-30">
                                        <div class="pmbb-view">
                                            <div class="m-t-30">
                                                <button class="btn bgm-red btn-primary btn-sm" type="submit">Delete Account</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                       
                        
                            
                        </div>
                    </div>
                </div>
            </section>
        </section>

          <%- include ../partials/afooter.ejs %>
        <script src="/alpha/js/jquery-2.1.1.min.js"></script>
        <script src="/alpha/js/bootstrap.min.js"></script>
        
        <script src="/alpha/vendors/nicescroll/jquery.nicescroll.min.js"></script>
        <script src="/alpha/vendors/auto-size/jquery.autosize.min.js"></script>
        <script src="/alpha/vendors/waves/waves.min.js"></script>
        <script src="/alpha/vendors/bootstrap-growl/bootstrap-growl.min.js"></script>
        <script src="/alpha/vendors/sweet-alert/sweet-alert.min.js"></script>
        
        <script src="/alpha/js/functions.js"></script>
        <script src="/alpha/js/demo.js"></script>
    
    
    </body>
</html>